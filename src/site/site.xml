<?xml version="1.0" encoding="ISO-8859-1"?>

<project xmlns="http://maven.apache.org/DECORATION/1.0.0"
         xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
         xsi:schemaLocation="http://maven.apache.org/DECORATION/1.0.0 http://maven.apache.org/xsd/decoration-1.0.0.xsd">

	<bannerLeft>
        <name>PLAY Project</name>
        <src>http://www.play-project.eu/images/logo-play.jpg</src>
    </bannerLeft>
	
	<publishDate position="right"/>
	<version position="right"/>

    <skin>
        <groupId>org.apache.maven.skins</groupId>
        <artifactId>maven-fluido-skin</artifactId>
        <version>1.3.0</version>
    </skin>
    <custom>
        <fluidoSkin>
			<twitter>
				<user>DistributedCEP</user>
				<showUser>true</showUser>
				<showFollowers>true</showFollowers>				
			</twitter>
			<gitHub>
				<projectId>play-project/${project.artifactId}</projectId>
				<ribbonOrientation>right</ribbonOrientation>
				<ribbonColor>red</ribbonColor>
			</gitHub>
	  </fluidoSkin>
    </custom>


    <body>
		<head>
			<link rel="meta" title="DOAP" href="doap.rdf" type="application/rdf+xml"/>
		</head>

		<breadcrumbs>
			<item name="${project.artifactId}" href=""/>
		</breadcrumbs>

		<!-- Inherit this menu in sub modules. -->
		<menu ref="reports" inherit="top" />
		
		<!-- Inherit this menu in sub modules. -->
		<menu ref="modules" inherit="bottom" />

		<!-- Inherit this menu in sub modules. -->
        <menu name="PLAY Project" inherit="bottom" >
            <item name="PLAY Project Home" href="http://www.play-project.eu/"/>
            <item name="PLAY Project News" href="http://news.play-project.eu/"/>
        </menu>
    </body>
</project>
