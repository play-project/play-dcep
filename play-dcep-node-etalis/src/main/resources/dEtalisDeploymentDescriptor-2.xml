<?xml version="1.0" encoding="UTF-8"?>
<GCMDeployment xmlns="urn:gcm:deployment:1.0"
    xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
    xsi:schemaLocation="urn:gcm:deployment:1.0 http://proactive.inria.fr/schemas/gcm/1.0/ExtensionSchemas.xsd    ">

    <environment>
        <descriptorVariable name="HOSTS" value="detalis2.s-node.de" />
        <javaPropertyVariable name="user.dir" />
    </environment>

    <resources>
        <group refid="remoteThroughSSH">
            <host refid="host" />
        </group>
    </resources>

    <infrastructure>
        <hosts>
            <host id="host" os="unix" hostCapacity="1" vmCapacity="1">
                <homeDirectory base="root" relpath="${user.dir}" />
            </host>
        </hosts>

        <groups>
            <sshGroup id="remoteThroughSSH" hostList="${HOSTS}" />
        </groups>
    </infrastructure>

</GCMDeployment>