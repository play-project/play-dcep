<GCMDeployment xmlns="urn:gcm:deployment:1.0"
	xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
	xsi:schemaLocation="urn:gcm:deployment:1.0 http://proactive.inria.fr/schemas/gcm/1.0/ExtensionSchemas.xsd">

	<environment>
		<javaPropertyVariable name="user.home" />
		<javaPropertyVariable name="user.name" />
		<javaPropertyDescriptorDefault name="os"
			value="unix" />
	</environment>

	<resources>
		<group refid="fzkCloudHosts">
			<host refid="hLocalhost" />
		</group>
	</resources>

	<infrastructure>

		<hosts>
			<host id="hLocalhost" os="${os}" hostCapacity="3" vmCapacity="1">
				<homeDirectory base="root" relpath="${user.home}" />
			</host>

		</hosts>

		<groups>
			<sshGroup id="fzkCloudHosts" hostList="etalis2.dcep.s-node.de">
				<privateKey base="root" relpath="/root/.ssh/id_rsa" />
			</sshGroup>
		</groups>

	</infrastructure>
</GCMDeployment>